<div class="container">
  <div class="row">
    <h2 class="text-center mt-4 mb-4 p-0">Add a Service</h2>
    <div class="col-12 col-md-6 offset-lg-3 mb-5">
      <div class="bg-white rounded p-3 shadow">
        <%= simple_form_for @service do |f| %>
          <%= f.input :name_service, label: 'Title', placeholder: 'Your service title' %>
          <%= f.input :description_service, :as => :text, :input_html => { class: 'test', :cols => 5, :rows => 8 }, label: 'Description', placeholder: 'Describe your service', class:"textarea" %>

          <%= f.input :category, collection: @categorys%>
          <%= f.input :photo, as: :file %>
          <%= f.input :address,
            input_html: {data: {address_autocomplete_target: "address"}},
            wrapper_html: {data: {controller: "address-autocomplete",
            address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
          %>
          <%= f.input :price, placeholder: '$' %>
          <%= f.button :submit, class:"btn-yellow" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
