<section class="container">
  <div class="row">
    <div class="col-md-8 mt-5">
      <% @services.each do |service| %>
        <div class="card-services my-4">
          <% user = User.find(service.user_id)%>
            <div class="service-body d-flex">

              <div class="service-ph">
                <% if service.photo.attached? %>
                  <%= cl_image_tag service.photo.key, height: 200, width: 200, crop: :fill %>
                <% end %>
              </div>

              <div class="service-info ms-4">
                <p class="tag-yellow mb-1"><%= service.category %></p>
                <div class="title-service">
                  <%= service.name_service %>
                </div>

                <p class="pt-2"><%= service.description_service %></p>
                <p>$ <%= service.price %></p>
                <p><%= service.address %></p>

                <div class="service-btn d-flex">
                <%= link_to "Hire Service", new_contract_path(current_user), class: "btn-yellow" %>
                <%= button_to "Chat", conversations_path(sender_id: current_user.id, recipient_id: user.id), data: { "turbo-method": :post }, class:"btn-yellow-outline ms-2" %>
                </div>
              </div>

            </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
