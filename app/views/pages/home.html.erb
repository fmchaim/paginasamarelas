<div class="home-hero">
  <h1 class="hero-title text-center mb-1">Your digital yellow pages</h1>
  <p class="hero-subtitle text-center mt-0">Find local businesses and services in your area</p>
      <form class="d-flex mx-auto" action="/services" method="get">
        <input class="form-control me-2" type="text" name="search" placeholder="Category" aria-label="Search">
        <input class="form-control me-2" type="text" name="city" placeholder="City" aria-label="Search">
        <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
      </form>
</div>

<div class="container">
  <div class="home-categories text-center">
  <h2>Trending Categories</h2>

    <div class="cards-categories d-flex justify-content-around align-items-center">
      <div class="cards-list mx-auto" >
        <button onclick="search('Arquiteto')" type="submit" class="btn btn-category"><i class="fa-solid fa-helmet-safety"></i></button>
        <h5 type="text" class="mt-3" name="search">Architect</h5>
      </div>


      <div class="cards-list mx-auto">
        <button onclick="search('Electrician')" type="submit"class="btn btn-category"><i class="fa-solid fa-bolt"></i></button>
         <h5 type="text" class="mt-3" name="search">Electrician</h5>
      </div>

      <div class="cards-list mx-auto">
        <button onclick="search('Painter')" type="submit" class="btn btn-category"><i class="fa-solid fa-paint-roller"></i></button>
         <h5 type="text" class="mt-3" name="search">Painter</h5>
      </div>

      <div class="cards-list mx-auto">
        <button onclick="search('Cleaning')" type="submit" class="btn btn-category"><i class="fa-solid fa-hand-sparkles"></i></button>
         <h5 type="text" class="mt-3" name="search">Cleaning</h5>
      </div>

      <div class="cards-list mx-auto">
        <button onclick="search('Car repair')" type="submit" class="btn btn-category"><i class="fa-solid fa-car-side"></i></button>
         <h5 type="text" class="mt-3" name="search">Car repair</h5>
      </div>

      <div class="cards-list mx-auto">
        <button onclick="search('Transport')" type="submit" class="btn btn-category"><i class="fa-solid fa-dolly"></i></button>
         <h5 type="text" class="mt-3" name="search">Transport</h5>
      </div>

        <script>
        function search(searchTerm) {
          window.location.href = '/services?search=' + encodeURIComponent(searchTerm);
        }
        </script>

    </div>
  </div>
</div>


