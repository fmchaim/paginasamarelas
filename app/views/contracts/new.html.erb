<div class="container">
  <h2 class="text-center mt-4 mb-0">Select a date</h2>
  <div class="devise-card mt-4 mb-5 mx-auto">
    <%= simple_form_for [@user, @service, @contract] do |f| %>
    <%= f.input :date, as: :date, label: 'Date of the service:', start_year: Date.today.year, end_year: Date.today.year + 1 %>
    <%= f.button :submit, class:"btn-yellow" %>

  <% end %>
  </div>
</div>
