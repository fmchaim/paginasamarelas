<div class="container">

  <h1>Meus Contratos</h1>

  <% @contracts.each do |contract| %>

    <h2>Contratos como cliente</h2>

    <% if current_user == contract.user_id %>
      <p><%= contract.service.name_service %></p>
      <p><%= contract.service.description_service %></p>
      <p><%= contract.service.user_id.first_name %></p>
      <p><%= contract.status %></p>

      <%# <%= link_to "See more details",  %> CHAMAR ROTA DE SHOW
    <% else %>
      <p>You have no contracts</p>
    <% end %>

    <h2>Contratos como prestador de servi√ßos</h2>
    
    <% if current_user == contract.service_id.user_id %>
      <p><%= contract.service.name_service %></p>
      <p><%= contract.service.description_service %></p>
      <p><%= contract.user_id.first_name %></p>
      <p><%= contract.status %></p>

      <%# <%= link_to "See more details",  %> CHAMAR ROTA DE SHOW
    <% else %>
      <p>You have no contracts</p>
    <% end %>
  <% end %>
</div>





















