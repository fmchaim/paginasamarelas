<div class="container">
  <h2 class="text-center mt-4 mb-0">Write a Review</h2>
  <div class="devise-card mt-4 mb-5 mx-auto">
    <%= simple_form_for [@user, @service, @contract, @review] do |f| %>
      <%= f.select :rating, 1..5 %> / <i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i><i class="fa-solid fa-star"></i>
      <%= f.input :comment, as: :text, :input_html => { class: 'test', :cols => 4, :rows => 8 }, placeholder: 'Write your review of the service' %>
      <%= f.button :submit, "Submit Review", class: "btn-yellow" %>
    <% end %>
  </div>
</div>
