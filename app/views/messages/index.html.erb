<div class="container">
  <div class="row">
    <h2 class="text-center mt-4 mb-4 p-0">Message Box</h2>
    <div class="col-12 col-md-6 offset-lg-3 mb-5">
      <div class="bg-white rounded p-3 shadow">

        <% if @over_ten %>
          <%= link_to 'Show Previous', '?m=all' %>
        <% end %>

        <div class="ui segment">
          <% @messages.each do |message| %>
            <% if message.body %>
              <% user = User.find(message.user_id) %>
              <div class="item">
                <div class="content">
                  <div class="header">
                    <strong><%= user.first_name %></strong> <%= message.message_time %>
                  </div>
                  <div class="list">
                    <div class="item">
                      <i class="right triangle icon"></i>
                      <%= message.body %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>

        <%= form_for [@conversation, @message], html: {class: "ui reply form"} do |f| %>
          <div class="field">
            <%= f.text_area :body, class: "form-control px-3 py-2" %>
            <%= f.submit "Send",  class:"btn btn-yellow px-3 py-2"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
